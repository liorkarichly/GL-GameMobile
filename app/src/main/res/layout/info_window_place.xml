<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/name_of_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:textSize="25sp" />

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_status_opening_of_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:text="Open Now: "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_opening_of_place"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"/>


        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_address_of_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:text="Address: "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_of_name"
            android:maxLines="2"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"/>

        </LinearLayout>

        <!-- Phone Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_phone_number_of_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:autoLink="phone"
                android:maxLines="1"
                android:text="Phone Number: "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_number_of_place"
                    android:autoLink="phone"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="5dp"/>

        </LinearLayout>

        <!-- Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_rating_of_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:text="Rating:"
                android:textColor="@color/black"
                android:textSize="15sp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_of_place"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="5dp"/>

        </LinearLayout>

        <!-- Website -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_web_site_of_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:autoLink="web"
                android:text="Website:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web_site_of_place"
        android:autoLink="web"
        android:maxLines="2"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="5dp"/>

        </LinearLayout>

        <!-- Total Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_total_rating_of_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:text="Total Rating:"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/web_site_of_place" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_rating_of_place"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/web_site_of_place"
        android:layout_marginHorizontal="5dp"/>

        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click_waze"
        android:text="Waze"
        android:drawableLeft="@drawable/ic_waze"
        android:textColor="@color/black"
        android:background="@drawable/waze_button"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/total_rating_of_place"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>